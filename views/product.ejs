
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('bootstrap') %> 
    <title>Snack It</title>
</head>
<%- include('fonts') %> 
<%- include('animate') %> 
<style>
      .navbar{
        font-family: 'Montserrat', sans-serif;
    }
    .my-text{
        font-family: 'Montserrat', sans-serif;
    }
</style>
<body>





    <nav class="navbar navbar-light bg-warning">
        <div class="container-fluid fw-bold">
          <a class="navbar-brand animated tada" href="/admin">
            Snack<span class="text-light">.</span>It
          </a>
          <div class="" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="/admin">Admin</a>
              </li>
            </ul>
          </div>
        </div>
    </nav>


    <% if (data) { %>
     
      <div class="container" style="margin-top: 100px;margin-bottom: 100px;">
        <div class="row justify-content-center">
          <div class="col-11 col-md-6 shadow rounded my-text">
            <h2 class="m-2 fw-bold"><i class="text-warning bi bi-egg-fried"></i> Product Detail<span class="text-warning">.</span></h2>
            <form action="" class="m-3" method="post">
  
              <div class="form-group">
                <div class="form-group m-2 col-10 fw-bold">
                  <label for="">Id :</label>
                  <input type="text" name="id" id="" class="form-control" readonly placeholder="" value="<%= data._id %>" aria-describedby="helpId">
                  <small id="helpId" class="text-muted">Product Id</small>
                </div>
                <div class="form-group m-2 col-10 fw-bold">
                  <label for="">Name :</label>
                  <input type="text" name="name" id="" class="form-control" placeholder="" value="<%= data.Name %>" aria-describedby="helpId">
                  <small id="helpId" class="text-muted">The name of product</small>
                </div>
                <div class="form-group m-2 col-10 fw-bold">
                  <label for="">1ons :</label>
                  <input type="text" name="1ons" id="" class="form-control" placeholder="" value="<%= data['1ons'] %>" aria-describedby="helpId">
                  <small id="helpId" class="text-muted"><i class="bi bi-tag-fill text-warning"></i> 1ons price</small>
                </div>
                <div class="form-group m-2 col-10 fw-bold">
                  <label for="">1/4kg :</label>
                  <input type="text" name="1/4kg" id="" class="form-control" placeholder="" value="<%= data['1/4kg'] %>" aria-describedby="helpId">
                  <small id="helpId" class="text-muted"><i class="bi bi-tag-fill text-warning"></i> 1/4kg price</small>
                </div>
                <div class="form-group m-2 col-10 fw-bold">
                  <label for="">1/2kg :</label>
                  <input type="text" name="1/2kg" id="" class="form-control" placeholder="" value="<%= data['1/2kg'] %>" aria-describedby="helpId">
                  <small id="helpId" class="text-muted"><i class="bi bi-tag-fill text-warning"></i> 1/2kg price</small>
                </div>
                <div class="form-group m-2 col-10 fw-bold">
                  <label for="">1kg :</label>
                  <input type="text" name="1kg" id="" class="form-control" placeholder="" value="<%= data['1kg'] %>" aria-describedby="helpId">
                  <small id="helpId" class="text-muted"><i class="bi bi-tag-fill text-warning"></i> 1kg price</small>
                </div>
              </div>
              <h1><%= data.onSuccess %> </h1>
                
                <% if (data.onSuccess === "true" ) { %>
                  <div class="col-10">
                    <div class="alert alert-success" role="alert">
                      <strong>Update Success</strong>
                    </div>
                  </div>
                <% } else if (data.onError === "true") { %>
                 
                  <div class="col-10">
                    <div class="alert alert-danger" role="alert">
                      <strong>Update failed</strong>
                    </div>
                  </div>
                <% } %>
              <div class="d-inline">
                <button type="submit" class="animated tada m-2 btn btn-warning text-dark fw-bold">
                  <i class="bi bi-save"></i> Save Changes
                </button>
              </div>
            </form>
            <button type="menu" class="animated tada mx-4 mb-4 btn btn-danger text-dark fw-bold" data-bs-toggle="modal" data-bs-target="#exampleModal">
              <i class="bi bi-trash-fill"></i> Delete
            </button>
          </div>
        </div>
      </div>
      
    <% } %>


<!-- modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-warning">
            <h5 class="modal-title my-text fw-bold" id="exampleModalLabel">Deleting product<span class="text-light">.</span></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            </button>
          </div>
          <div class="modal-body">
            <form action="/admin/dashboard/product/<%= data._id %>/delete" method="post">
              <div class="my-text mb-2 fs-5">
                Confirm deleting <span class="fw-bold"><%= data.Name %> </span>
              </div>
              <div class="form-group">
                <input type="text" name="id" id="" class="form-control" value="<%= data._id %>" readonly placeholder="product name" aria-describedby="helpId">
              </div>
            
          </div>
          <div class="modal-footer my-text fw-bold">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" value="Delete Product" id="confirm" class="btn btn-danger">
          </form>
          </div>
        </div>
      </div>
    </div>


</body>
</html>